<section class="h-screen flex">
     <!-- Left Side (Image, Takes Half the Screen & Matches Background) -->
     <div class="hidden md:flex md:w-1/2 h-screen bg-gray-50 dark:bg-gray-900 items-center justify-center">
          <%= image_tag "SmallerLogo.png", alt: "Login Image", 
               class: "w-1/2 h-1/2 object-cover pointer-events-none" %>
          <h1 class="text-white">Use credentials: <br>email: test@test.com <br>password: test</h1>
     </div>

     <!-- Right Side (Login Form - Now Larger) -->
     <div class="w-full md:w-1/2 flex items-center justify-center h-screen bg-gray-50 dark:bg-gray-900">
          <div class="w-full max-w-lg p-10 sm:p-14 bg-white dark:bg-gray-800 shadow-xl rounded-xl">
               <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white text-center mb-6">
                    Sign in to MDN Inventory
               </h2>

               <!-- Flash Messages -->
               <% if flash[:alert] %>
               <div class="p-4 mb-5 text-lg text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800">
                    <%= flash[:alert] %>
               </div>
               <% end %>

               <% if flash[:notice] %>
               <div class="p-4 mb-5 text-lg text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800">
                    <%= flash[:notice] %>
               </div>
               <% end %>

               <!-- Login Form (Larger Inputs) -->
               <%= form_with url: session_path, method: :post, class: "mt-8 space-y-8" do |form| %>
               <!-- Email Field -->
               <div>
                    <label for="email" class="block mb-2 text-lg font-semibold text-gray-900 dark:text-white">Your email</label>
                    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username",
                         placeholder: "Enter your email address", value: params[:email_address],
                         class: "w-full bg-gray-50 border border-gray-400 text-gray-900 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
               </div>

               <!-- Password Field -->
               <div>
                    <label for="password" class="block mb-2 text-lg font-semibold text-gray-900 dark:text-white">Your password</label>
                    <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72,
                         placeholder: "Enter your password",
                         class: "w-full bg-gray-50 border border-gray-400 text-gray-900 text-lg rounded-lg focus:ring-blue-500 focus:border-blue-500 p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
               </div>

               <!-- Submit Button -->
               <%= form.submit "Login to your account",
                    class: "w-full px-6 py-4 text-lg font-semibold text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition" %>
               <% end %>
          </div>
     </div>
</section>